<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="leilaapsilva.sororidadetelas1.MainActivity">

    <Button
        android:id="@+id/angry_btn"

        android:text="Sala1"
        android:textColor="#FFF7F7"
        android:textSize="30sp"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/botao_circulo"
        android:shadowColor="#636363"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tema 1"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button"
        android:text="Sala2"
        android:textColor="#FFF7F7"
        android:textSize="30sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/botao_circulo"
        android:shadowColor="#636363"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignTop="@+id/angry_btn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tema 2"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_below="@+id/angry_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/button2"
        android:text="Sala1"
        android:textColor="#FFF7F7"
        android:textSize="30sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/botao_circulo"
        android:shadowColor="#636363"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/button3"
        android:text="Sala2"
        android:textColor="#FFF7F7"
        android:textSize="30sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/botao_circulo"
        android:shadowColor="#636363"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:id="@+id/button4"
        android:text="Sala3"
        android:textColor="#FFF7F7"
        android:textSize="30sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/botao_circulo"
        android:shadowColor="#636363"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tema 3"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/button5"
        android:text="+"
        android:textColor="#FFF7F7"
        android:textSize="30sp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/botao_circulo"
        android:shadowColor="#636363"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button6"
        android:text="Sala1"
        android:textColor="#FFF7F7"
        android:textSize="30sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/botao_circulo"
        android:shadowColor="#636363"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button7"
        android:text="Sala2"
        android:textColor="#FFF7F7"
        android:textSize="30sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/botao_circulo"
        android:shadowColor="#636363"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignBottom="@+id/button6"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button8"
        android:text="Sala3"
        android:textColor="#FFF7F7"
        android:textSize="30sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/botao_circulo"
        android:shadowColor="#636363"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignTop="@+id/button7"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

</RelativeLayout>
